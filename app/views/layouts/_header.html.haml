.header
  .topHeader
    .topHeader__main
      %h1.topHeader__main--logo
        = link_to root_path do
          = image_tag 'logo.png', size: '140x40' 
      .search-box
        = form_with(url: search_items_path, local: true) do |f|
          = f.text_field :keyword, placeholer: "商品を検索する", class: "search-box__text"
          = f.submit class: "serach-box__btn" 
    .nav-bar 
      %ul.nav-bar__left
        %li.nav-bar__left__left
          = link_to 'カテゴリー', categories_path
        %li.nav-bar__left__right
          = link_to 'ブランド', root_path
          
      %ul.nav-bar__right
        - if user_signed_in?
          %li.nav-bar__right
            = link_to "マイページ", user_path(current_user)
        - else
          %li.nav-bar__right_login
            = link_to 'ログイン', user_session_path
          %li.nav-bar__right__new
            = link_to '新規会員登録', new_user_registration_path