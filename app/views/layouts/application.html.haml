!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FURIMA
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .topHeader
        .topHeader__main
          %h1.topHeader__main-logo
            %a(href= "/")
              = image_tag 'logo.png', size: '140x40'
          .search-box
            %input{type: "text", class:"search-box__text", placeholder: "キーワードから探す"}
            %button{type:"submit", class:"search-box__btn"}
              = image_tag 'icon-search.png', size: '19x19'
        .nav-bar
          %ul.nav-bar__left
            %li.nav-bar__left__left
              = link_to 'カテゴリー', root_path

            %li.nav-bar__left__right
              = link_to 'ブランド', root_path
              
          %ul.nav-bar__right
            %li.nav-bar__right_login
              = link_to 'ログイン', root_path
            %li.nav-bar__right__new
              = link_to '新規会員登録', root_path

    .footer          
    
    .footer-banner
    .footer-footer
    
      .contents

      .footer__logo

    .purchase-btn
  
    
    = yield
