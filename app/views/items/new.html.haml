= render "devise/template/header"
.wrapper
  .form-new
    = form_with(model: @item, local: true) do |f|
      .form-image
        .form-image__label
          %label<>出品画像
          %span<>必須
        %p 最大10枚までアップロードできます
        .form-image__box
          %label
            = f.fields_for :item_images do |i|
              = i.file_field :src, class: '.file_field', style: "display: none;"
              = image_tag "icon_camera.png", size: '24x24'
            %p
              ドラッグアンドドロップ
              %br
              またはクリックしてファイルをアップロード


      .form-item
        .form-item__name
          .form-item__name__label
            %label<>商品名
            %span<>必須
          .form-item__name__input
            = f.text_field :name, placeholder: "40文字まで"
        .form-item__text
          .form-item__text__label
            %label<>商品の説明
            %span<>必須
          .form-item__text__input
            = f.text_area :text, placeholder: "商品の説明（必須1,000文字以内(色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"
          .form-item__text__style-counter
            0/1000


      .form-detail
        %p 商品の詳細
        .form-detail__category
          .form-detail__category__label
            %label<>カテゴリー
            %span<>必須
          .form-detail__category__input
            -# = f.select :categr, [ ["レディース",1], ["メンズ", 2], ["ベビー・キッズ", 3 ], ["インテリア・住まい・小物", 4 ], ["本・音楽・ゲーム", 5 ], ["おもちゃ・ボビー・グッズ", 6 ], ["コスメ・香水・美容", 7 ], ["家電・スマホ・カメラ", 8 ], ["スポーツ・レジャー", 9 ], ["ハンドメイド", 10 ], ["チケット", 11 ], ["自動車・オートバイ", 12 ], ["その他", 13 ] ], prompt: "選択してください"
        .form-detail__brand
          .form-detail__brand__label
            %label<>ブランド
            %span<>任意
          .form-detail__brand__input
            = f.text_field :brand, placeholder: "例）シャネル"
        .form-detail__status
          .form-detail__status__label
            %label<>商品の状態
            %span<>必須
          .form-detail__status__input
            = f.select :statuses, Item.statuses


      .form-shipping
        .form-shipping__title
          %p 配送について
        .form-shipping__charge
          .form-shipping__charge__label
            %label<>配送料の負担
            %span<>必須
          .form-shipping__charge__input
            = f.select :delivery_charge_bearers, Item.delivery_charge_bearers
        .form-shipping__area
          .form-shipping__area__label
            %label<>発送元の地域
            %span<>必須
          .form-shipping__area__input
            = f.select :name, [ ["北海道",1], ["青森県", 2], ["岩手県", 3], ["宮城県", 4], ["秋田県", 5], ["山形県", 6], ["福島県", 7], ["茨城県", 8], ["栃木県", 9], ["群馬県", 10], ["埼玉県", 11], ["千葉県", 12], ["東京都", 13], ["神奈川県", 14], ["新潟県", 15], ["富山県", 16], ["石川県", 17], ["福井県", 18], ["山梨県", 19], ["長野県", 20], ["岐阜県", 21], ["静岡県", 22], ["愛知県", 23], ["三重県", 24], ["滋賀県", 25], ["京都府", 26], ["大阪府", 27], ["兵庫県", 28], ["奈良県", 29], ["和歌山県", 30], ["鳥取県", 31], ["島根県", 32], ["岡山県", 33], ["広島県", 34], ["山口県", 35], ["徳島県", 36], ["香川県", 37], ["愛媛県", 38], ["高知県", 39], ["福岡県", 40], ["佐賀県", 41], ["長崎県", 42], ["熊本県", 43], ["大分県", 44], ["宮崎県", 45], ["鹿児島県", 46], ["沖縄県", 47] ], prompt: "選択してください"
        .form-shipping__days
          .form-shipping__days__label
            %label<>発送までの日数
            %span<>必須
          .form-shipping__days__input
            = f.select :delivery_days, Item.delivery_days

      .form-price
        .form-price__title
          %p 価格（¥300~9,999,999）

        .form-price__value
          .form-price__value__left
            %label<>販売価格
            %span<>必須
          .form-price__value__right
            %span<>¥
            = f.text_field :price, placeholder: "0"
        .form-price__fee
          販売手数料（10%）
          %span<>ー
        .form-price__plofit
          販売利益
          %span<>ー
      .form-btn
        .form-btn__top
          = f.submit '出品する', class:"form-btn__top"
        .form-btn__midle
          = link_to "#" do
            下書きに保存
        .form-btn__bottom
          = link_to root_path do
            もどる

      .form-term
        禁止されている行為および出品物を必ずご確認ください。偽ブランド品や盗品物などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして加盟店規約に同意したことになります。
  = render "devise/template/footer"






