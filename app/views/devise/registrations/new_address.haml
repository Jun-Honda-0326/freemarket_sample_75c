.devise
  .wrapper
    = render "devise/template/register_header_2"

    .sign-up
      .sign-up__top
        発送元・お届け先住所入力
      .sign-up__bottom
        .field
          %label お名前
          %span 必須
          %br/
          %input{name: "family_name", placeholder: "例）山田"}
          %br/
          %input{name: "first_name", placeholder: "例）彩"}
        .field
          %label お名前カナ
          %span 必須
          %br/
          %input{name: "family_name_kana", placeholder: "例）ヤマダ"}
          %br/
          %input{name: "first_name_kana", placeholder: "例）アヤ"}
        .field
          %label 郵便番号
          %span 必須
          %br/
          %input{name: "post_number", placeholder: "例）123-4567"}
        .field
          %label 都道府県
          %span 必須
          %br/
          %select{name: "prefecture"}
            %option --
            %option 北海道
        .field
          %label 市町村
          %span 必須
          %br/
          %input{name: "city", placeholder: "例）横浜市緑区"}
        .field
          %label 番地
          %span 必須
          %br/
          %input{name: "house_number", placeholder: "例）青山1-1-1"}
        .field.field--optional
          %label 建物名
          %span 任意
          %br/
          %input{name: "building_name", placeholder: "例）柳ビル103"}
        .field.field--optional
          %label 電話
          %span 任意
          %br/
          %input{name: "phone_number", placeholder: "例）09012345678"}
        .send_btn
          会員登録
        
  = render "devise/template/footer"