= render "layouts/header"

.mypage
  = render "side_menu"
  .main_contents
    .user_header
      .user_header__info
        = image_tag asset_path("material/icon/member_photo_noimage_thumb.png")
        %p= current_user.name
        %p
          = "出品数: #{current_user.items.count}"
    .item_window
      %h3 お知らせ
      .item_window__list
        .item
          = image_tag asset_path("logo.png")
          %p たった１分！簡単出品のFURIMAへようこそ!!        
        .item
          = link_to "一覧を見る", "#", class: "index_btn"


= render "layouts/footer"